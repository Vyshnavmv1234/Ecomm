  <style>
    /* ===== CSS DROPDOWN ===== */

.dropdown {
  position: relative;
}

.dropdown-toggle {
  cursor: pointer;
  font-weight: 500;
}

.dropdown-menu {
  position: absolute;
  top: 130%;
  right: 0;
  min-width: 160px;
  background: #fff;
  border: 1px solid #e5e5e5;
  box-shadow: 0 8px 20px rgba(0,0,0,0.12);
  border-radius: 6px;
  padding: 8px 0;
  display: none;
  z-index: 2000;
}

.dropdown-menu a {
  display: block;
  padding: 10px 16px;
  font-size: 14px;
  color: #222;
  white-space: nowrap;
}

.dropdown-menu a:hover {
  background: #f5f5f5;
}

    

    /* ---------------- HEADER ---------------- */
    header {
      border-bottom: 1px solid #eee;
      padding: 18px 60px;
    }

    .header-top {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .logo {
      font-family: 'Playfair Display', serif;
      font-size: 22px;
      font-weight: 500;
    }

    .search {
      flex: 1;
      margin: 0 40px;
    }
    .dropdown:hover .dropdown-menu {
  display: block;
}


    .search input {
      width: 100%;
      padding: 10px 14px;
      border: 1px solid #ddd;
      font-size: 14px;
    }

    .header-icons {
      display: flex;
      gap: 18px;
      font-size: 14px;
    }

    nav {
      margin-top: 16px;
      display: flex;
      justify-content: center;
      gap: 28px;
      font-size: 14px;
    }

   
  

  </style>
</head>
<body>

  <!-- HEADER -->
  <header>
    <div class="header-top">
      <div class="logo"><a href="/user/homepage">WestLane</a></div>
      
      <div class="search">
        <form method="get" action="/user/productList">
        <input 
        name="pSearch" 
        value="<%= typeof search !== 'undefined' ? search : '' %>" 
        type="text" 
        placeholder="What are you looking for?" 
      />
      </form>
      </div>
      <div class="header-icons">

        <% if (user) { %>

          <div class="dropdown">

  <span class="dropdown-toggle" id="userToggle">
    <%= user.name %> â–¾
  </span> 

  <div class="dropdown-menu" id="userMenu">
    <a href="/user/userDashboard">My Profile</a>
    <a href="/user/logout">Logout</a>
  </div>

</div>
        <% } else { %>

        <a href="/user/signup">Sign up</a>
        <a href="/user/login">Log in</a>

        <% } %>

        <span>â™¡</span>
        <span>ðŸ‘œ</span>
        <span>â˜°</span>
      </div>
    </div>

    <nav>
      <a href="/user/productList">All</a>
      <a href="#">Tshirt</a>
      <a href="#">Pants</a>
      <a href="#">Old Money</a>
      <a href="#">OverSized</a>
    </nav>
  </header>

  <script>
  const toggle = document.getElementById("userToggle");
  const menu = document.getElementById("userMenu");

  let isOpenByClick = false;

  // Click toggle
  toggle.addEventListener("click", function (e) {
    e.stopPropagation();
    isOpenByClick = !isOpenByClick;
    menu.style.display = isOpenByClick ? "block" : "none";
  });

  // Close when clicking outside
  document.addEventListener("click", function () {
    isOpenByClick = false;
    menu.style.display = "none";
  });
</script>


  