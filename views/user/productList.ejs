<%- include("../../views/partials/user/header") %>
<style>
  
  /* TOP BAR */
  .top-bar {
    display: flex;
    justify-content: space-between;
    padding: 24px 48px 10px;
    font-size: 13px;
    color: #777;
  }
  
  .filters {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  
  .filter-btn {
    padding: 6px 12px;
    border: 1px solid #ddd;
    border-radius: 20px;
    font-size: 12px;
    cursor: pointer;
  }
  
  /* PRODUCT GRID */
  .products {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 50px;
    padding: 20px 48px;
  }
  
  .product {
    position: relative;
  }
  
  .product img {
    width: 100%;
    background: #f5f5f5;
  }
  
  .wishlist {
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 18px;
    cursor: pointer;
  }
  
  .brand {
    font-size: 13px;
    letter-spacing: 1px;
    margin: 12px 0 4px;
  }
  
  .title {
    font-size: 14px;
    color: #666;
    margin: 0;
  }
  
  .price {
    color: #e67e22;
    font-weight: bold;
    margin: 6px 0;
  }
  
  .rating {
    font-size: 12px;
    color: #777;
  }
  
  .sizes {
    display: flex;
    gap: 6px;
    margin-top: 8px;
  }
  
  .size {
    width: 24px;
    height: 24px;
    border: 1px solid #ccc;
    border-radius: 50%;
    font-size: 11px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* PAGINATION */
  .pagination {
    margin-top: 100px;
    display: flex;
    justify-content: center;
    gap: 10px;
    padding: 40px;
  }
  
  .page {
    padding: 8px 12px;
    border: 1px solid #ddd;
    font-size: 13px;
  }
  
  .active {
    background: #000;
    color: #fff;
    border-color: #000;
  }
  
  
</style>

<!-- TOP BAR -->
<div class="top-bar">
  <div>240 PRODUCTS FOUND</div>
  <div class="filters">
    <div class="filter-btn">New ⌄</div>
    <div class="filter-btn">☷</div>
    <div class="filter-btn">⇅</div>
  </div>
</div>

<!-- PRODUCTS -->
<div class="products">

  <!-- PRODUCT CARD -->
   <% products.forEach(product =>{%>

     <div class="product">

       <span class="wishlist">♡</span>

       <img src="<%=product.images[0].url%>"
        alt="<%= product.pName %>">

       <div class="brand"><%=product.name%></div>
       <p class="title"><%=product.title%></p>
       <div class="price">₹ <%=product.price%></div>
       <div class="rating">★ 4.8 Ratings</div>

      </div>
      <%})%>

</div>

<!-- PAGINATION -->
<div class="pagination">
  <div class="page active">1</div>
  <div class="page">2</div>
  <div class="page">3</div>
  <div class="page">4</div>
  <div class="page">5</div>
  <div class="page">›</div>
</div>

<%- include("../../views/partials/user/footer") %>
