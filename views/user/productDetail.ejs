<style>
  /* SIMILAR PRODUCTS */
.similar-section {
  max-width: 1400px;
  margin: 80px auto;
  padding: 0 24px;
}

.similar-section h3 {
  display: flex;
  justify-content: center;
  font-size: 18px;
  margin-bottom: 24px;
}

.similar-products {
  display: flex;
  justify-content: center;
  gap: 32px;
}

.similar-card {
  width: 260px;
  cursor: pointer;
}

.similar-card img {
  width: 100%;
  height: 360px;
  object-fit: cover;
  background: #f5f5f5;
}

.similar-info {
