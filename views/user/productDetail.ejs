<%- include("../../views/partials/user/header") %>


<style>
  /* SIMILAR PRODUCTS */
/* SECTION */
/* Size buttons */
.size-option {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 42px;
  height: 42px;
  border: 1px solid #ccc;
  margin-right: 8px;
  font-size: 14px;
  cursor: pointer;
  background: #fff;
  color: #000;
  transition: all 0.2s ease;
  user-select: none;
  position: relative;
  z-index: 10;
}

.size-option:hover {
  border-color: #000;
}


.size-option.active {
  background-color: #000 !important;
  color: #fff !important;
  border-color: #000 !important;
}

.similar-section {
  max-width: 1400px;
  margin: 80px auto;
  padding: 0 24px;
}

.similar-section h3 {
  text-align: center;
  font-size: 18px;
  margin-bottom: 24px;
}
.slider-container {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px; /* arrow distance */
}


.slider-window {
  overflow: hidden;
  max-width: calc((300px * 3) + (20px * 2)); /* max 3 cards */
  width: fit-content; /* üî• key line */
}


.similar-wrapper {
  display: flex;
  gap: 20px;
  transition: transform 0.4s ease;
}


.similar-card {
  width: 300px;
  flex-shrink: 0;
}

.similar-card:last-child {
  margin-right: 0;
}

.similar-card img {
  width: 100%;
  height: 360px;
  object-fit: cover;
  background: #f5f5f5;
}

/* INFO */
.similar-info {
  margin-top: 10px;
}

.similar-brand {
  font-size: 11px;
  letter-spacing: 2px;
  color: #777;
  margin-bottom: 4px;
}

.similar-title {
  font-size: 13px;
  line-height: 1.4;
  margin-bottom: 6px;
}

.similar-price {
  font-size: 13px;
  font-weight: bold;
}

/* ARROWS */
.arrow {
  background: black;
  color: white;
  border: none;
  font-size: 28px;
  padding: 10px 14px;
  cursor: pointer;
}



.gallery {
  width: 620px; 
  height: 700px;     /* dominant column */
  padding: 32px;
  border: 1px solid #f5f5f5;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.zoom-wrapper {
  overflow: hidden;       /* hides zoom overflow */
  cursor: zoom-in;
}
.zoom-wrapper img {
  transition: transform 0.15s ease-out;
  transform-origin: center center;
}

.thumbnail {
  cursor: pointer;
  transition: border 0.2s ease;
}

.thumbnail:hover {
  border-color: #000;
}

.main-image {
  width: 100%;
  height: 640px;          /* üî• tall like reference */
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24px;
}

.main-image img {
  width: auto;
  height: 100%;
  object-fit: contain;
}


/* THUMBNAILS */
.thumbnail-container {
  display: flex;
  gap: 12px;
  justify-content: center;
  align-items: center;
}


.thumbnail {
  width: 72px;
  height: 72px;
  border: 1px solid #ddd;
  padding: 4px;
  background: #fff;
}

.thumbnail img {
  max-width: 100%;
  max-height: 100%;
  margin-left: 7px;
}

/* ACTIVE THUMBNAIL (UI ONLY) */
.thumbnail.active {
  border: 2px solid #000;
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Segoe UI", sans-serif;
}

body {
  background: #fff;
}


/* PRODUCT */
.product-container {
  max-width: 1400px;   /* üî• allows content to stretch */
  margin: 0 auto;
  display: flex;
  gap: 64px;
  padding: 56px 24px;  /* controlled side padding */
  align-items: flex-start;
}




.product-details {
   width: 620px;     /* slimmer like reference */
