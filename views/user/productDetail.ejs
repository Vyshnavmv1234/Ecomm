}

.brand {
  font-size: 12px;
  letter-spacing: 3px;
  margin-bottom: 6px;
}

.title {
  font-size: 17px;
  line-height: 1.4;
  margin-bottom: 8px;
}

.price {
  font-size: 17px;
  font-weight:900;
  margin-bottom: 10PX;
}


.size span {
  display: inline-block;
  border: 1px solid #ccc;
  padding: 6px 12px;
  margin-right: 6px;
  cursor: pointer;
}

.action {
  display: flex;
  gap: 10px;
  margin: 20px 0;
}

.add-btn {
  width: 250px;
  background: black;
  color: white;
  border: none;
  padding: 14px;
}



/* INFO */
.section {
  margin-bottom: 20px;
}

.section h4 {
  font-size: 13px;
  letter-spacing: 1px;
  margin-bottom: 6px;
}

.section p,
.section li {
  font-size: 13px;
  color: #666;
  line-height: 1.6;
}

.section ul {
  list-style: none;
}

.accordion {
  border-top: 1px solid #ddd;
  padding: 12px 0;
  font-size: 13px;
}

/* TABS */
.tabs {
  width: 80%;
  margin: 40px auto;
  border-top: 1px solid #ddd;
}

.tab-header {
  display: flex;
  justify-content: center;
  gap: 40px;
  margin-bottom: 30px;
}

.tab-header span {
  padding: 12px;
  cursor: pointer;
  font-size: 14px;
  border-bottom: 2px solid transparent;
}

.tab-header .active {
  border-color: orange;
}

/* DESCRIPTION */
.description {
  max-width: 800px;
  margin: auto;
  font-size: 14px;
  color: #555;
  line-height: 1.7;
}

/* REVIEW */
.review-container {
  max-width: 900px;
  margin: auto;
}

.review-top {
  display: flex;
  gap: 40px;
  margin-bottom: 40px;
}

.rating-box {
  background: #fff5cc;
  padding: 30px;
  text-align: center;
  width: 200px;
}

.rating-box h1 {
  font-size: 48px;
}

.rating-bars div {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.bar {
  height: 6px;
  background: #eee;
  width: 200px;
  margin: 0 10px;
}

.bar span {
  display: block;
  height: 6px;
  background: orange;
}

.customer-review {
  border-top: 1px solid #ddd;
  padding: 20px 0;
}

.customer-review h4 {
  font-size: 14px;
}

.customer-review p {
  font-size: 13px;
  color: #555;
}
</style>
</head>

