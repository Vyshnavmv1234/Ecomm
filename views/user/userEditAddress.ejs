<%- include("../../views/partials/user/header") %>

<main>
  <style>
    * {
      box-sizing: border-box;
    }

    main {
      min-height: 70vh;
      padding: 80px 0;
    }

    .title {
      text-align: center;
      margin-bottom: 60px;
    }

    .title h2 {
      font-weight: 400;
      letter-spacing: 4px;
      margin: 0;
    }

    .divider {
      width: 80px;
      height: 1px;
      background: #cfcfcf;
      margin: 12px auto 0;
    }

    .form-wrapper {
      width: 420px;
      margin: auto;
    }

    .form-group {
      margin-bottom: 26px;
    }

    .form-group input {
      width: 100%;
      border: none;
      border-bottom: 1px solid #dddddd;
      padding: 14px 0;
      outline: none;
      color: #333;
    }

    .form-group input::placeholder {
      color: #9b9b9b;
    }

    .error {
      font-size: 12px;
      color: red;
      margin-top: 4px;
      display: none;
    }

    .submit-btn {
      margin-top: 30px;
      text-align: center;
    }

    .submit-btn button {
      background: #000;
      color: #fff;
      border: none;
      padding: 16px 90px;
      letter-spacing: 2px;
      cursor: pointer;
    }
  </style>

  <div class="title">
    <h2>EDIT ADDRESS</h2>
    <div class="divider"></div>
  </div>

  <form class="form-wrapper" id="addressForm" method="post" action="/user/edit-address?id=<%= address._id %>" >

    <div class="form-group">
      
      <input type="text" id="name" placeholder="Name" name="name" value="<%=address.name%>">
      <div class="error">Name is required</div>
    </div>

    <div class="form-group">
      <input type="text" id="city" placeholder="City" name="city" value="<%=address.city%>">
      <div class="error">City is required</div>
    </div>

    <div class="form-group">
      <input type="text" id="street" placeholder="Street name" name="streetName" value="<%=address.streetName%>">
      <div class="error">Street name is required</div>
    </div>

    <div class="form-group">
      <input type="text" id="state" placeholder="State" name="state" value="<%=address.state%>">
      <div class="error">State is required</div>
    </div>

    <div class="form-group">
      <input type="text" id="phone" placeholder="Phone number" name="phone" value="<%=address.phone%>">
      <div class="error">Enter valid 10 digit phone number</div>
    </div>

    <div class="form-group">
      <input type="text" id="pin" placeholder="PIN code" name="pincode" value="<%=address.pincode%>">
      <div class="error">Enter valid 6 digit PIN code</div>
    </div>

    <div class="submit-btn">
      <button type="submit">SAVE CHANGES</a></button></a>
    </div>

  </form>

  <script>
    const form = document.getElementById("addressForm");

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      let isValid = true;

      const fields = [
        { id: "name", condition: v => v.trim() !== "" },
        { id: "city", condition: v => v.trim() !== "" },
        { id: "street", condition: v => v.trim() !== "" },
        { id: "state", condition: v => v.trim() !== "" },
        { id: "phone", condition: v => /^[0-9]{10}$/.test(v) },
        { id: "pin", condition: v => /^[0-9]{6}$/.test(v) }
      ];

      fields.forEach(field => {
        const input = document.getElementById(field.id);
        const error = input.nextElementSibling;

        if (!field.condition(input.value)) {
          error.style.display = "block";
          isValid = false;
        } else {
          error.style.display = "none";
        }
      });

      if (isValid) {
        form.submit(); // proceed to backend
      }
    });
  </script>
</main>

<%- include("../../views/partials/user/footer") %>
