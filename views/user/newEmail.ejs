<%- include("../../views/partials/user/header") %>

<!-- ================= MAIN ================= -->
<main style="
  min-height:calc(100vh - 90px);
  display:flex;
  align-items:center;
  justify-content:center;
  background:#f6f6f6;
">

  <!-- CARD -->
  <div style="
    width:790px;
    height:420px;
    background:#ffffff;
    border:1px solid #e5e5e5;
    border-radius:6px;
    display:flex;
    align-items:center;
    justify-content:center;
  ">

    <!-- CONTENT -->
    <form 
      action="/user/update-email" 
      method="POST"
      style="text-align:center;"
    >

      <label style="
        display:block;
        font-size:14px;
        color:#444;
        margin-bottom:10px;
      ">
        <h2>Enter New Email</h2>
      </label>

      <input
        type="email"
        name="email"
        required
        placeholder="example@gmail.com"
        style="
          width:220px;
          padding:8px 10px;
          border:1px solid #bdbdbd;
          border-radius:4px;
          outline:none;
          text-align:center;
        "
      />

      <div style="margin-top:22px;">
        <button
          type="submit"
          style="
            background:#4db6be;
            border:none;
            padding:10px 26px;
            color:#fff;
            font-size:14px;
            border-radius:6px;
            cursor:pointer;
          "
        >
          Submit
        </button>
      </div>

    </form>

  </div>
</main>
