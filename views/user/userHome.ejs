  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      color: #222;
      background: #fff;
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    img {
      width: 100%;
      display: block;
    }

    /* ================= HEADER ================= */
    header {
      border-bottom: 1px solid #eee;
      padding: 18px 60px;
    }

    .header-top {
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .logo {
      font-size: 26px;
      font-weight: bold;
    }

    .search {
      flex: 1;
      margin: 0 40px;
    }

    .search input {
      width: 100%;
      padding: 10px 14px;
      background: #f2f2f2;
      border: none;
      border-radius: 4px;
    }

    .header-icons {
      display: flex;
      gap: 18px;
      font-size: 14px;
    }

    nav {
      margin-top: 16px;
      display: flex;
      justify-content: center;
      gap: 28px;
      font-size: 14px;
    }

    /* ================= HERO ================= */
    .hero {
      padding: 40px 60px;
    }

    .hero img {
      max-height: 650px;
      object-fit: cover;
    }

    /* ================= EXPLORE ================= */
    .explore {
      text-align: center;
      margin: 40px 0;
      font-size: 14px;
    }

    /* ================= PRODUCT GRID ================= */
    .product-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
      padding: 0 60px 60px;
    }

    .product-card {
      text-align: center;
      font-size: 13px;
    }

    .product-card p {
      margin-top: 10px;
      color: #555;
    }

    /* ================= SECTION TITLE ================= */
    .section-title {
      padding: 60px 60px 20px;
      font-size: 14px;
      letter-spacing: 1px;
      color: #777;
    }

    /* ================= INFO SECTION ================= */
    .info {
      background: #f7f7f7;
      padding: 80px 60px;
      text-align: center;
    }

    .info h3 {
      font-size: 22px;
      margin-bottom: 14px;
      font-weight: normal;
    }

    .info p {
      max-width: 600px;
      margin: 0 auto 40px;
      font-size: 14px;
      color: #666;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 30px;
      font-size: 13px;
    }

    /* ================= FOOTER ================= */
    footer {
      padding: 60px;
      border-top: 1px solid #eee;
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 40px;
      font-size: 13px;
    }

    footer h4 {
      margin-bottom: 14px;
      font-weight: 500;
    }

    footer p {
      margin-bottom: 8px;
      color: #555;
    }

    .store-buttons img {
      height: 36px;
      margin-right: 10px;
    }

    /* ================= RESPONSIVE ================= */
    @media (max-width: 900px) {
      .product-grid,
      .info-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      footer {
        grid-template-columns: 1fr;
      }

      header,
      .hero,
      .section-title,
      .product-grid,
      .info {
        padding-left: 20px;
        padding-right: 20px;
      }
    }
  </style>
</head>

