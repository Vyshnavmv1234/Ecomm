<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>WestLane Admin Dashboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
  font-family: "Inter", Arial, sans-serif;
}

body{
  background:#f6f7fb;
}

/* MAIN CONTENT */
.main{
  margin-top:70px;      /* header height */
  margin-left:240px;    /* sidebar width */
  padding:25px;
}

/* STATS */
.stats{
  display:grid;
  grid-template-columns:repeat(3,1fr);
  gap:20px;
  margin-bottom:25px;
}

.card{
  background:#fff;
  padding:20px;
  border-radius:16px;
  box-shadow:0 10px 20px rgba(0,0,0,0.04);
}

.card h3{
  margin-top:10px;
  font-size:24px;
}

.card p{
  color:#777;
  font-size:14px;
}

/* GRID */
.grid{
  display:grid;
  grid-template-columns:2fr 1fr;
  gap:20px;
}

/* CHART */
.chart{
  height:220px;
  background:#eef2ff;
  border-radius:12px;
  margin-top:20px;
  display:flex;
  align-items:center;
  justify-content:center;
  color:#4a5cff;
  font-size:18px;
}

/* PROGRESS */
.progress{
  margin-top:15px;
}

.progress-header{
  display:flex;
  justify-content:space-between;
  font-size:14px;
  margin-bottom:6px;
}

.bar{
  height:8px;
  background:#e5e7eb;
  border-radius:10px;
}

.bar div{
  height:8px;
  background:#4a5cff;
  border-radius:10px;
}

/* TABLE */
.table{
  margin-top:30px;
}

table{
  width:100%;
  border-collapse:collapse;
}

th,td{
  padding:14px;
  border-bottom:1px solid #eee;
  font-size:14px;
}

th{
  color:#777;
}

.status{
  background:#ffe7ea;
  color:#ff4d6d;
  padding:6px 12px;
  border-radius:20px;
  font-size:12px;
}
</style>
</head>

<body>

<!-- HEADER -->
<%- include("../../views/partials/admin/header") %>

<!-- SIDEBAR -->
<%- include("../../views/partials/admin/sidebar") %>

<!-- MAIN CONTENT -->
<div class="main">

  <h2>Dashboard</h2>

  <!-- STATS -->
  <div class="stats">
    <div class="card">
      <p>Today's Sales</p>
      <h3>₹100,999</h3>
    </div>

    <div class="card">
      <p>Today's Revenue</p>
      <h3>₹30,000</h3>
      <small>Profit made so today so far</small>
    </div>

    <div class="card">
      <p>Users Count</p>
      <h3>20390</h3>
      <small>Total users signed up</small>
    </div>
  </div>

  <!-- GRID -->
  <div class="grid">
    <div class="card">
      <p>Total Revenue</p>
      <h3>₹50,23780</h3>
      <div class="chart">Revenue Chart</div>
    </div>

    <div class="card">
      <p>Most Sold Items</p>

      <div class="progress">
        <div class="progress-header"><span>Hoodie</span><span>70%</span></div>
        <div class="bar"><div style="width:70%"></div></div>
      </div>

      <div class="progress">
        <div class="progress-header"><span>T-Shirt</span><span>40%</span></div>
        <div class="bar"><div style="width:40%"></div></div>
      </div>

      <div class="progress">
        <div class="progress-header"><span>Box-Fit</span><span>60%</span></div>
        <div class="bar"><div style="width:60%"></div></div>
      </div>

      <div class="progress">
        <div class="progress-header"><span>Straight-Fit</span><span>80%</span></div>
        <div class="bar"><div style="width:80%"></div></div>
      </div>

      <div class="progress">
        <div class="progress-header"><span>OldMoney</span><span>20%</span></div>
        <div class="bar"><div style="width:20%"></div></div>
      </div>
    </div>
  </div>

  <!-- TABLE -->
  <div class="card table">
    <p>Latest Orders</p>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Product</th>
          <th>Date</th>
          <th>Customer</th>
          <th>Total</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>302012</td>
          <td>Black Ultron</td>
          <td>29 Dec 2025</td>
          <td>Josh Wisley</td>
          <td>₹59000</td>
          <td><span class="status">Processing</span></td>
        </tr>
        <tr>
          <td>302012</td>
          <td>Black Ultron</td>
          <td>29 Dec 2025</td>
          <td>Josh Wisley</td>
          <td>₹59000</td>
          <td><span class="status">Processing</span></td>
        </tr>
      </tbody>
    </table>
  </div>

</div>

</body>
</html>
