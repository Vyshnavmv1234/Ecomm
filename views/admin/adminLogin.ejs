<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>WestLane | Admin Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Inter', sans-serif;
    }

    body {
      background: #fff;
      color: #222;
    }

    /* HEADER */
    header {
      height: 70px;
      border-bottom: 1px solid #eee;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 60px;
    }

    .logo {
      font-size: 26px;
      font-weight: 500;
    }

    .admin-title {
      font-size: 16px;
      font-weight: 500;
      letter-spacing: 1px;
    }

    /* CONTAINER */
    .container {
      min-height: calc(100vh - 70px);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* LOGIN CARD */
    .login-card {
      width: 420px;
      border: 1px solid #e6e6e6;
      border-radius: 14px;
      padding: 40px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.05);
    }

    .login-card h2 {
      font-size: 22px;
      font-weight: 500;
      margin-bottom: 30px;
      color: #7a7a85;
    }

    /* FORM */
    .form-group {
      margin-bottom: 22px;
    }

    .form-group label {
      font-size: 13px;
      color: #7a7a85;
      display: block;
      margin-bottom: 6px;
    }

    .input-wrapper {
      position: relative;
    }

    .input-wrapper i {
      position: absolute;
      top: 50%;
      left: 14px;
      transform: translateY(-50%);
      color: #aaa;
      font-size: 14px;
    }

    .input-wrapper input {
      width: 100%;
      height: 44px;
      padding: 0 14px 0 42px;
      border-radius: 8px;
      border: 1px solid #ddd;
      outline: none;
      font-size: 14px;
    }

    .input-wrapper input::placeholder {
      color: #aaa;
    }

    .eye {
      right: 14px;
      left: auto;
      cursor: pointer;
    }

    /* BUTTON */
    .login-btn {
      width: 100%;
      height: 46px;
      border: none;
      border-radius: 10px;
      background: #cbbaba;
      color: #fff;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      margin-top: 10px;
    }

    .login-btn:hover {
      opacity: 0.9;
    }

    /* FORGOT */
    .forgot {
      text-align: center;
      margin-top: 20px;
      font-size: 14px;
    }

    .forgot a {
      text-decoration: none;
      color: #000;
      font-weight: 500;
    }

    /* RESPONSIVE */
    @media (max-width: 480px) {
      header {
        padding: 0 20px;
      }

      .login-card {
        width: 90%;
        padding: 30px;
      }
    }
  </style>
</head>
<body>

  <!-- HEADER -->
  <header>
    <div class="logo">WestLane</div>
    <div class="admin-title">ADMIN LOGIN</div>
  </header>

  <!-- MAIN -->
  <div class="container">
    <div class="login-card">

      <h2>Login</h2>

      <form method="post" action="/admin/adminLogin">

        <!-- EMAIL -->
        <div class="form-group">
          <label>Email</label>
          <div class="input-wrapper">
            <i class="fa-regular fa-user"></i>
            <input type="email" placeholder="Enter your email" name="email" required>
          </div>
        </div>

        <!-- PASSWORD -->
        <div class="form-group">
          <label>Password</label>
          <div class="input-wrapper">
            <i class="fa-solid fa-lock"></i>
            <input type="password" placeholder="Enter your password" name="password" required>
            <i class="fa-regular fa-eye eye"></i>
          </div>
        </div>
        <div>
          <p style="color: red; display: flex; justify-content: center;"><%if(message){%>
            <%=message%>
          <%}%>
          </p>
        </div>

        <button class="login-btn" type="submit">Login</button>

      </form>

      <div class="forgot">
        <!-- <a href="/admin/forgot-password">Forgot password?</a> -->
      </div>

    </div>
  </div>

</body>
</html>
